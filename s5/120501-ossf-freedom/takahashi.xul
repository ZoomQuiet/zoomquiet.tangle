	preventToShowHideToolbar : false,

	showMontaKeywordTimeout : 100,
	autoCruiseInterval      : 2000,
	timerUpdatingInterval   : 30000,

	cachedContents : [],
	sourceData     : [],
 
	init : function(option){ 
		if (this.initialized) {
			this.startPresentation();
